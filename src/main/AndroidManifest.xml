<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLibrary">
        <activity
            android:name=".WebsiteActivity"
            android:exported="true" />
        <activity
            android:name=".WishlistActivity"
            android:exported="true"
            android:label="@string/activity_wishlist"/>
        <activity
            android:name=".FavoriteBooksActivity"
            android:exported="true"
            android:label="@string/activity_favorite_books"/>
        <activity
            android:name=".CurrentBooksActivity"
            android:exported="true"
            android:label="@string/activity_currently_reading"/>
        <activity
            android:name=".FinishedBookActivity"
            android:exported="true"
            android:label="@string/activity_finished_books"/>
        <activity
            android:name=".BookActivity"
            android:exported="true"
            android:label="@string/activity_book"/>
        <activity
            android:name=".AllBooksActivity"
            android:exported="true"
            android:label="@string/activity_all_books"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>